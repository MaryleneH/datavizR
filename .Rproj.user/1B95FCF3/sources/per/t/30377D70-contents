```{r}
library(flextable)
library(officer)

ft <- flextable(head(mtcars))
ft <- theme_booktabs(ft)
ft <- autofit(ft)
doc <- read_docx()
doc <- body_add_flextable(doc, value = ft)
print(doc, target = "example.docx")
```

```{r, eval=T}
library(kableExtra)
library(flextable)
library(officer)

# a <- kable(mtcars[1:5, ], "html") %>%
#   kable_styling("striped") %>%
#   row_spec(1, color = "red")
a <- flextable(head(mtcars))
a <- theme_booktabs(ft)
a <- autofit(ft)
aa <- read_docx("test_flextable.docx")
aa <- body_add_flextable(aa, value = a)
print(aa, target = "test_flextable.docx")

